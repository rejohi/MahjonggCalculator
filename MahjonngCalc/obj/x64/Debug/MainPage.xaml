<Page
    x:Class="MahjonngCalc.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MahjonngCalc"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
            <Grid x:ConnectionId='1' x:Name="Lefttool" Grid.Column="0">
            
            </Grid>
            <Grid x:ConnectionId='2' x:Name="Hands" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid x:ConnectionId='4' x:Name="Set" Grid.Row="0">
                    <Grid.ColumnDefinitions>                     
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                        <ToggleButton x:ConnectionId='6' x:Name="Chi" Grid.Column="0" Height="Auto" Width="*" Content="Chi" HorizontalAlignment="Center" />
                        <ToggleButton x:ConnectionId='7' x:Name="Pon" Grid.Column="1" Height="Auto" Width="*" Content="Pon" HorizontalAlignment="Center"/>
                        <ToggleButton x:ConnectionId='8' x:Name="Kan" Grid.Column="2" Height="Auto" Width="*" Content="Kan" HorizontalAlignment="Center"/>
                        <ToggleButton x:ConnectionId='9' x:Name="ClosedKan" Grid.Column="3" Height="Auto" Width="*" Content="Closed Kan" HorizontalAlignment="Center"/>
            </Grid>                
                <Grid x:ConnectionId='5' x:Name="Tiles" Grid.Row="1">                    
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid.RowDefinitions>                        
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                
                            <Image Grid.Column="0" Grid.Row="0" Source="Assets/bamb1.png"/>
                            <Image Grid.Column="2" Grid.Row="0" Source="Assets/bamb2.png"/>
                            <Image Grid.Column="4" Grid.Row="0" Source="Assets/bamb3.png"/>
                            <Image Grid.Column="6" Grid.Row="0" Source="Assets/bamb4.png"/>
                            <Image Grid.Column="8" Grid.Row="0" Source="Assets/bamb5.png"/>
                            <Image Grid.Column="10" Grid.Row="0" Source="Assets/bamb6.png"/>
                            <Image Grid.Column="12" Grid.Row="0" Source="Assets/bamb7.png"/>
                            <Image Grid.Column="14" Grid.Row="0" Source="Assets/bamb8.png"/>
                            <Image Grid.Column="16" Grid.Row="0" Source="Assets/bamb9.png"/>

                            <Image Grid.Column="0" Grid.Row="2" Source="Assets/char1.png"/>
                            <Image Grid.Column="2" Grid.Row="2" Source="Assets/char2.png"/>
                            <Image Grid.Column="4" Grid.Row="2" Source="Assets/char3.png"/>
                            <Image Grid.Column="6" Grid.Row="2" Source="Assets/char4.png"/>
                            <Image Grid.Column="8" Grid.Row="2" Source="Assets/char5.png"/>
                            <Image Grid.Column="10" Grid.Row="2" Source="Assets/char6.png"/>
                            <Image Grid.Column="12" Grid.Row="2" Source="Assets/char7.png"/>
                            <Image Grid.Column="14" Grid.Row="2" Source="Assets/char8.png"/>
                            <Image Grid.Column="16" Grid.Row="2" Source="Assets/char9.png"/>

                            <Image Grid.Column="0" Grid.Row="4" Source="Assets/dot1.png"/>
                            <Image Grid.Column="2" Grid.Row="4" Source="Assets/dot2.png"/>
                            <Image Grid.Column="4" Grid.Row="4" Source="Assets/dot3.png"/>
                            <Image Grid.Column="6" Grid.Row="4" Source="Assets/dot4.png"/>
                            <Image Grid.Column="8" Grid.Row="4" Source="Assets/dot5.png"/>
                            <Image Grid.Column="10" Grid.Row="4" Source="Assets/dot6.png"/>
                            <Image Grid.Column="12" Grid.Row="4" Source="Assets/dot7.png"/>
                            <Image Grid.Column="14" Grid.Row="4" Source="Assets/dot8.png"/>
                            <Image Grid.Column="16" Grid.Row="4" Source="Assets/dot9.png"/>

                            <Image Grid.Column="0" Grid.Row="6" Source="Assets/winde.png"/>
                            <Image Grid.Column="2" Grid.Row="6" Source="Assets/winds.png"/>
                            <Image Grid.Column="4" Grid.Row="6" Source="Assets/windw.png"/>
                            <Image Grid.Column="6" Grid.Row="6" Source="Assets/windn.png"/>

                            <Image Grid.Column="10" Grid.Row="6" Source="Assets/dragong.png"/>
                            <Image Grid.Column="12" Grid.Row="6" Source="Assets/dragonr.png"/>
                            <Image Grid.Column="14" Grid.Row="6" Source="Assets/dragonw.png"/>
                
                    </Grid>
            </Grid>

        <Grid x:ConnectionId='3' x:Name="Scoreboard" Grid.Column="2">

        </Grid>
    </Grid>
</Page>

